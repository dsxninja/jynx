.message(v-for="message of messages", :key="message", :id="message.id")
    .user
        .avatar(v-if="message.user.avatar")
            .image(:style="{ 'background-image': `url('${message.user.avatar}')` }")
            //- .platform(:data-ui-title="message.user.platform")
            //-     i(:class="platforms[message.user.platform]")
    div
        .header
            .username(:style="{ color: message.user.color }") {{ message.user.username }}
            .date {{ unix().day }} {{ unix().month_name }} {{ unix().year }}
        .content {{ message.content }}